<h1>Pricing</h1>


<% @pricing = Stripe::Price.list(expand: ["data.product"])%>
<% @pricing.each do |price| %>
    <br>
    <%= price.product.name%>
    <%= price.id %>
    <%= price.unit_amount/100 %>
    <%= price.currency %>
    <%= price.recurring.interval %>
    <%= button_to "Checkout", checkout_create_path(price: price.id), method: :post, data: { turbo: false } %>
<%end%>